            <!-- Custom Checkbox for Tick Mark with "MT" text -->
            <label for="tick-checkbox" style="display: flex; align-items: center; cursor: pointer; user-select: none;">
              <input type="checkbox" id="tick-checkbox" name="mtTick" style="display: none;">
