    <style>/* Container styling */
        .toggle-container {
          display: flex; 
          margin: 20px;
        }
        
        /* Label styling */
        .toggle-label {
          margin: 0 10px;
        }
        
        /* Hide default radio buttons */
        .toggle-label input[type="radio"] {
          display: none;
        }
        
        /* Toggle button styling */
        .toggle-button {
          display: inline-block;
          width: 80px;
          height: 40px;
          line-height: 40px;
          text-align: center;
          border-radius: 20px;
          cursor: pointer;
          font-weight: bold;
          transition: background-color 0.3s, color 0.3s, transform 0.3s;
          background-color: #f0f0f0;
          color: #555;
          border: 2px solid #ccc;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        
        /* Hover effect */
        .toggle-button:hover {
          background-color: #e0e0e0;
        }
        
        /* Checked state styling */
        .toggle-label input[type="radio"]:checked + .toggle-button {
          background-color: #4caf50;
          color: #fff;
          border-color: #4caf50;
          transform: scale(1.05); /* Slight scale up on checked state */
        }
        </style>
