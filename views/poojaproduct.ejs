<main class="table">
  <section class="table__header" style="color: #000000; font-size: 24px;">
    <h1 style="font-weight: bold;">Add Pooja Product</h1>
    
</section>


    
        <section class="table__body">
           <table >
            <div class="form-container" style="height: 80vh; overflow-y: auto;">
          <form action="/poojaproduct" method="post" id="contact_form">
                   

                       
                            
            <div class="flex flex-wrap p-6 rounded-md ">
              <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/3 xl:w-1/3 px-4 mb-4">
                  <label class="block text-sm font-semibold text-black mb-2">Item Name</label>
                  <div class="flex items-center bg-white rounded-md p-2">
                      <span class="text-teal-500"><i class="fas fa-cube"></i></span>
                      <input name="itemName" placeholder="Item Name" type="text" class="ml-2 w-full py-1 px-2 bg-transparent border-none focus:outline-none text-gray-800 placeholder-gray-500">
                  </div>
              </div>
          
              <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/3 xl:w-1/3 px-4 mb-4">
                <label class="block text-sm font-semibold text-blue mb-2">Buying Price</label>
                <div class="flex items-center bg-white rounded-md p-2">
                    <span class="text-teal-500"><i class="glyphicon glyphicon-briefcase"></i></span>
                    <input name="buyingprice" placeholder="Buying Price" type="number" class="ml-2 w-full py-1 px-2 bg-transparent border-none focus:outline-none text-gray-800 placeholder-gray-500">
                </div>
            </div>
          
              <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/3 xl:w-1/3 px-4 mb-4">
                  <label class="block text-sm font-semibold text-blue mb-2">Selling Price</label>
                  <div class="flex items-center bg-white rounded-md p-2">
                      <span class="text-teal-500"><i class="fas fa-tags"></i></span>
                      <input name="sellingprice" placeholder="Selling Price" type="number" class="ml-2 w-full py-1 px-2 bg-transparent border-none focus:outline-none text-gray-800 placeholder-gray-500">
                  </div>
              </div>
          </div>
          
              

              
          <div class="flex flex-wrap  p-6 rounded-md ">
            <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/3 xl:w-1/3 px-4 mb-4">
                <label class="block text-sm font-semibold text-blue mb-2">Total Quantity</label>
                <div class="flex items-center bg-white rounded-md p-2">
                    <span class="text-teal-500"><i class="glyphicon glyphicon-user"></i></span>
                    <input name="totalquantity" placeholder="Total Quantity" type="number" class="ml-2 w-full py-1 px-2 bg-transparent border-none focus:outline-none text-gray-800 placeholder-gray-500">
                </div>
            </div>                
        </div>
        
                 
             

             
       
      
               

      <div class="p-4 flex justify-center items-center">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
         Add Item<span class="ml-2">ðŸš€</span>
        </button>
      </div>
      
         
      </form>
      </div>
