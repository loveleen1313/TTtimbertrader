<%- include('nav bar/navbar.ejs') %>
    <title>ITEM Database</title>
    <link rel='stylesheet' href='/stylesheets/productallstyle.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>


    <main class="table">
        <section class="table__header">
            <div class="custom-container">
                <h1 class="custom-heading">Product Database</h1>
                <a href="/ttproduct" class="custom-link"><i class="fa-solid fa-file-circle-plus"></i></a>
            </div>
            <div class="input-group">
                <input type="search" placeholder="Search Data...">
                <img src="images/search.png" alt="">
            </div>
            
        </section>
        <section class="table__body">
            <table>
                <thead>
                    <tr>
                        <th data-sort-type="numeric"> #<span class="icon-arrow">&UpArrow;</span> </th>
                        <th data-sort-type="string"> Product Name <span class="icon-arrow">&UpArrow;</span></th>
                        <th data-sort-type="numeric"> Rent Price <span class="icon-arrow">&UpArrow;</span></th>
                        <th data-sort-type="numeric"> Selling Price <span class="icon-arrow">&UpArrow;</span></th>
                        <th data-sort-type="numeric"> Stock <span class="icon-arrow">&UpArrow;</span></th>
                        <th data-sort-type="string"> Category <span class="icon-arrow">&UpArrow;</span></th>
                        <th data-sort-type="string"> Action <span class="icon-arrow">&UpArrow;</span></th>
                    </tr>
                </thead>
                <tbody>
                    <% let serialNumber = 1; %>
                    <% allproducts.forEach(function(post) { %>
                        <tr>
                            <td><%= serialNumber++ %></td>
                            <td><%= post.itemName %></td>
                            <td><%= post.rentPrice %></td>
                            <td><%= post.sellingPrice %></td>
                            <td><%= post.workingQuantity %></td>
                            
                            <% if (post.itemCategory == 1) { %>
                                <td>machine</td>
                            <% } else if (post.itemCategory == 2) { %>
                                <td>Scaffolding</td>
                                <% } else if (post.itemCategory == 3) { %>
                                    <td>Farma 5ft</td>
                                    <% } else if (post.itemCategory == 4) { %>
                                        <td>Farma 6ft</td>
                                        <% } else if (post.itemCategory == 5) { %>
                                            <td>Farma 9ft</td>
                                            <% } else if (post.itemCategory == 6) { %>
                                                <td>Farma 10ft</td>
                            <% } else { %>
                                <td><%= post.itemCategory %></td>
                            <% } %>
                            
                        
                            <td>
                                <a href="/edit/<%= post._id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a href="#" onclick="confirmDelete('<%= post._id %>')" class="delete-link"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
        
    </main>
    <script src="./javascripts/productall.js"></script>
    <%- include('nav bar/navbardown.ejs') %>
