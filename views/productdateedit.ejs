<script>
    function formatDate(dateString) {
      if (!dateString) return ""; // Return empty string if date is not provided
  
      const dateObject = new Date(dateString);
      const year = dateObject.getFullYear();
      const month = String(dateObject.getMonth() + 1).padStart(2, "0");
      const day = String(dateObject.getDate()).padStart(2, "0");
      const hours = String(dateObject.getHours()).padStart(2, "0");
    const minutes = String(dateObject.getMinutes()).padStart(2, "0");
    const seconds = String(dateObject.getSeconds()).padStart(2, "0");


      return `${year}-${month}-${day} ${hours}:${minutes}:${seconds}`;
    }
  
    // Usage
    const formattedDate = formatDate("<%= productEdit.receiptdate %>");
    console.log(formattedDate); // Check if the formatted date is correct
  
    // Set the formatted date as the value of the input field
    document.querySelector('input[name="receiptDate"]').value = formattedDate;
  </script>
  
              

              
      
             

             
       
            
      
         
          
      
         
          
      
        
         
        
